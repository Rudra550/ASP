@model MVC.Models.Userin

<div class="row">
    <div class="col-md-6  rounded-3" style="position:relative; top:20vh;left:22vw;min-height:fit-content;color:#00f;background-color:#fff9;">
        <form asp-action="Edit">
            <div class="form-group m-4">
                <label asp-for="UserId" class="control-label" style="font-weight:900;color:#CC3300"></label>
                <input asp-for="UserId" class="form-control" readonly autofocus style="border:2px solid #CC3300 ;box-shadow: 1px 2px 2px #CC3300;font-weight:800;color:#CC3300" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group m-4">
                <label asp-for="UserName" class="control-label" style="font-weight:900;color:darkcyan"></label>
                <input asp-for="UserName" class="form-control" required autofocus style="border:2px solid #0558;box-shadow: 1px 2px 2px #055;font-weight:800;color:#004ccc" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group m-4">
                <label asp-for="Mobile" class="control-label" style="font-weight:900;color:darkcyan"></label>
                <input asp-for="Mobile" class="form-control" required autofocus style="border:2px solid #0558;box-shadow: 1px 2px 2px #055;font-weight:800;color:#004ccc" />
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>
            <div class="form-group m-4">
                <label asp-for="UserPassword" class="control-label" style="font-weight:900;color:darkcyan"></label>
                <input asp-for="UserPassword" class="form-control" required autofocus style="border:2px solid #0558;box-shadow: 1px 2px 2px #055;font-weight:800;color:#004ccc" />
                <span asp-validation-for="UserPassword" class="text-danger"></span>
            </div>
            <div class="form-group text-end">
                <button type="submit" class="btn btn-success" style="margin: 0 0 2% 0">Save Changes</button>
                <a asp-action="Index" class="btn btn-warning" style="margin: 0 3.2% 2% 1% ;color:#000">Back to List</a>
            </div>
        </form>
    </div>
</div>
