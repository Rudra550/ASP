@model MVC.Models.Userin
@{
    Layout = "Null";
}
<div class="form-container" style=" display: flex;
    justify-content: center;position:fixed;top:1vh;left:40vw;
    align-items: center;
    height: 100%;">
    <form asp-action="Create" method="post" style=" background: white;
    padding: 2em;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);border-radius:2.5%;box-shadow:8px 8px 7px #000b;
    width: 400px;">
        <div class="form-group" style="margin-bottom: 1em;">
            <label asp-for="UserId" style="   font-weight: bold;
    display: block;
    margin-bottom: 0.5em;"></label>
            <input asp-for="UserId" class="form-control" style="border:2px solid #0558;box-shadow: 1px 2px 2px #055;font-weight:800;color:#055" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
        <div class="form-group" style="margin-bottom: 1em;">
            <label asp-for="UserName" style="   font-weight: bold;
    display: block;
    margin-bottom: 0.5em;"></label>
            <input asp-for="UserName" class="form-control" style="border:2px solid #0558;box-shadow: 1px 2px 2px #055;font-weight:800;color:#055" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
        <div class="form-group" style="margin-bottom: 1em;">
            <label asp-for="Mobile" style="   font-weight: bold;
    display: block;
    margin-bottom: 0.5em;"></label>
            <input asp-for="Mobile" class="form-control" style="border:2px solid #0558;box-shadow: 1px 2px 2px #055;font-weight:800;color:#055" />
        <span asp-validation-for="Mobile" class="text-danger"></span>
    </div>
        <div class="form-group" style="margin-bottom: 1em;">
            <label asp-for="UserPassword" style="   font-weight: bold;
    display: block;
    margin-bottom: 0.5em;"> </label>
            <input asp-for="UserPassword" class="form-control" style="border:2px solid #0558;box-shadow: 1px 2px 2px #055;font-weight:800;color:#055" />
        <span asp-validation-for="UserPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn" style="background-color:#f60;color:#fff">Create</button>
        <a asp-action="Login" class="btn btn-dark">Back to Login</a>
</form>
