@{
    Layout = "_Layout1";
}

<div style="display: flex; justify-content: space-between; margin:45px 30px 5px 30px;">
    <div style="width: 24%; background-color: #4CAF50; color: white; padding: 20px; border-radius: 10px; box-shadow: 4px 6px 8px rgba(0,0,0,0.5);">
        <div style="font-size: 20px; margin-bottom: 5px;"><i class="fas fa-users"></i> CLIENTS</div>
        <div style="font-size: 24px; font-weight: bold;">5k+</div>
    </div>
    <div style="width: 24%; background-color: #2196F3; color: white; padding: 20px; border-radius: 10px; box-shadow: 4px 6px 8px rgba(0,0,0,0.5);">
        <div style="font-size: 20px; margin-bottom: 5px;"><i class="fas fa-heart"></i> LIKES</div>
        <div style="font-size: 24px; font-weight: bold;">3.5k+</div>
    </div>
    <div style="width: 24%; background-color: #FFC107; color: white; padding: 20px; border-radius: 10px; box-shadow: 4px 6px 8px rgba(0,0,0,0.5);">
        <div style="font-size: 20px; margin-bottom: 5px;"><i class="fas fa-calendar-alt"></i> EVENTS</div>
        <div style="font-size: 24px; font-weight: bold;">200+</div>
    </div>
    <div style="width: 24%; background-color: #f44336; color: white; padding: 20px; border-radius: 10px; box-shadow: 4px 6px 8px rgba(0,0,0,0.5);">
        <div style="font-size: 20px; margin-bottom: 5px;"><i class="fas fa-star"></i> STARS</div>
        <div style="font-size: 24px; font-weight: bold;">2k</div>
    </div>
</div>
<div style="display: flex; justify-content: space-between; margin:45px 30px 5px 30px;">
    <div style="width:49%;font-size:1.5rem;font-weight:800;">
        Weekly Sales - Last Week
        <canvas id="myChart"></canvas>
    </div>
    <div class="text-start" style="width:49%;height:50vh;padding-left:10vw;;font-size:1.5rem;font-weight:800;">
        Support Requests
        <canvas id="myChrt" style="height:20vh"></canvas>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Sales chart
    const salesData = {
        labels: ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'],
        datasets: [{
            label: 'Sales',
            data: [12000, 15000, 18000, 13000, 2000, 20000],
            backgroundColor: 'rgba(255, 99, 132, 0.2)',
            borderColor: 'rgba(255, 99, 132, 1)',
            borderWidth: 1
        }]
    };

    const ctx = document.getElementById('myChart').getContext('2d');
    new Chart(ctx, {
        type: 'line',
        data: salesData,
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

    // Pie chart
    const pieData = {
        labels: ['Progress', 'Delayed', 'Complete'],
        datasets: [{
            label: 'Support Requests',
            data: [175, 100, 400],
            backgroundColor: [
                'rgba(75, 192, 192, 0.8)',
                'rgba(255, 99, 132, 0.8)',
                'rgba(54, 162, 235, 0.8)'
            ],
            borderColor: [
                'rgba(75, 192, 192, 1)',
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)'
            ],
            borderWidth: 1
        }]
    };

    const pieCtx = document.getElementById('myChrt').getContext('2d');
    new Chart(pieCtx, {
        type: 'pie',
        data: pieData,
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                title: {
                    display: true,
                    text: 'Support Request Status'
                }
            }
        }
    });
</script>
